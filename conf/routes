# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index()
POST        /bars/               controllers.Application.addBar()
GET         /orm/                controllers.OrmTest.populateOrmtest()

# Facebook interaction
GET         /fblogin             controllers.FBController.logIn
GET         /fbcallback          controllers.FBController.loginCallback(code: String ?= "")
GET         /fbpost              controllers.FBController.postMsg
GET         /fbfriends           controllers.FBController.getFriendsList
GET         /fblogout            controllers.FBController.logOut
GET         /fbclean             controllers.FBController.cleanDB()
GET         /status              controllers.Application.status()


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)
