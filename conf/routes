# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index()
GET         /revroute            controllers.Application.revroute()


# Facebook interaction
GET         /fblogin             controllers.FBController.logIn
GET         /fbcallback          controllers.FBController.loginCallback(code: String ?= "")
GET         /fbpost              controllers.FBController.postMsg
GET         /fbfriends           controllers.FBController.getFriendsList()
GET         /fblogout            controllers.FBController.logOut
GET         /fbclean             controllers.FBController.cleanDB()
GET         /status              controllers.Application.status()
GET         /loadfriends         controllers.FBController.loadFriends()
GET         /fbcommon            controllers.FBController.fbcommon(friends: String ?= "")
GET         /fbtest              controllers.FBController.checkGraph()
GET         /graph               controllers.FBController.graph(friends: String ?= "")
GET         /ajax                controllers.Application.ajax()
GET         /testAjax            controllers.Application.testAjax()
GET         /jsRoutes            controllers.FBController.jsRoutes()
GET         /fbcommontest        controllers.FBController.fbcommontest



# Images
GET         /image/:id           controllers.ImageController.getImage(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)
